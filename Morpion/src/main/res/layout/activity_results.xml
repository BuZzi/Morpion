<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/winnerText"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Results"
            android:id="@+id/textView"
            android:layout_above="@+id/player2Results"
            android:layout_toRightOf="@+id/player1Results"
            android:layout_marginBottom="19dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Player 1"
            android:id="@+id/player1Results"
            android:layout_marginBottom="27dp"
            android:layout_above="@+id/RestartGame"
            android:layout_toLeftOf="@+id/RestartGame"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Player 2"
            android:id="@+id/player2Results"
            android:layout_alignTop="@+id/player1Results"
            android:layout_toRightOf="@+id/RestartGame"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPLAY"
            android:id="@+id/RestartGame"
            android:onClick="RestartGame"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"/>

</RelativeLayout>