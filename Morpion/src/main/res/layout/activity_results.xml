<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="Rejouer"
            android:id="@+id/RestartGame"
            android:onClick="RestartGame"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Joueur 1"
            android:id="@+id/player1Results"
            android:layout_marginBottom="27dp"
            android:layout_above="@+id/RestartGame"
            android:layout_toLeftOf="@+id/RestartGame"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Joueur 2"
            android:id="@+id/player2Results"
            android:layout_alignTop="@+id/player1Results"
            android:layout_toRightOf="@+id/RestartGame"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RÃ©sultats"
            android:id="@+id/textView"
            android:layout_above="@+id/player2Results"
            android:layout_toRightOf="@+id/player1Results"
            android:layout_marginBottom="19dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:layout_marginTop="60dp"
            android:layout_marginLeft="75dp"
            android:id="@+id/winnerText"
            android:layout_marginRight="11dp"/>

</RelativeLayout>